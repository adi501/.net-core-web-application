@page
@model Core_Web_Application.Pages.Restaurants.ListModel
@{
}

<h1>Restaurants</h1>

@*@Model.Message*@

<div>
    <table class="table">
        @foreach(var restaurant in Model.Restaurants)
        {
        <tr>
            <td>
                @restaurant.Name
            </td>
            <td>
                @restaurant.Location
            </td>
            <td>
                @restaurant.Cuisine
            </td>
        </tr>
        }
    </table>
</div>
